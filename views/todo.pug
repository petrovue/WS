doctype html
html
	head
	title "TO DO" LIST 'APP'
	link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css", integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65", crossorigin="anonymous")
	script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js", integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V", crossorigin="anonymous")
	body
		//h1= title		Пример за HTML коментар
		//-p Welcome to #{title} - Пример за Pug коментар - не се вижда в генерирания HTML
		h1 "TO DO" LIST 'APP'
		form(method="post", class="row row-cols-lg-auto g-3 align-items-center")
			div(class="col-12")
				label(for="todo_add", class="form-label") To do:
			input(type="hidden", name="action", value="add")
			div(class="col-12")
				input(type="text", name="todo", id="todo_add", class="form-control")

			div(class="col-12")
				label(for="todo_ime", class="form-label") IME:
				input(type="text", name="ime", id="todo_ime", class="form-control")
				
			div(class="col-12")
				input(type="submit", class="btn btn-primary")

		each v, i in todo
			p
				form(method="post", class="row row-cols-lg-auto g-3 align-items-center")
					div(class="col-12")
						label #{i} :: #{v[0]} :: #{v[1]}
					input(type="hidden", name="action", value="del")
					input(type="hidden", name="todo", value=i)
					div(class="col-12")
						input(type="submit", value="X", class="btn btn-danger")

		hr
